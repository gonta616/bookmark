{% extends '@App/base.html.twig' %}

{% block nav_content %}
<ul class="nav navbar-nav">
{{form_start(postForm, {'attr': {'id': 'form-bookmark'}}) }}
    {{form_row(postForm.url)}}
    {{ form_row(postForm.save) }}
{{form_end(postForm) }}
</ul>
{% endblock %}

{% block content %}
<div class="content" data-pjax-container>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="table-scrollable">
                <table class="table table-hover">
                    <thead>
                        <tr>
                        </tr>
                    </thead>
                    <tbody>
                        {% if bookmarks|length > 0 %}
                        {% for bookmark in bookmarks %}
                        <tr data-id="{{ bookmark.id }}">
                            <td>{{bookmark.url}}</td>


                        </tr>
                        {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
        {% for bookmark in bookmarks %}

        {% endfor %}
    </div>
</div>
{% endblock %}

{% block test %}
<div class="max-width">
    <div class="row">
        <div class="col-md-8 col-sm-12">
            {% if bookmarks|length > 0 %}
            <ul>
                {% for bookmark in bookmarks %}
                <div class="card">
                    <div class="card-block">
                        <p class="card-text">This image is in the middle</p>
                    </div>
                    <!-- <img src="/images/pathToYourImage.png" alt="Card image"> -->
                    <div class="card-block">
                        <p class="card-text">of a card.</p>
                    </div>
                </div>
                {% endfor %}
            </ul>
            {% endif %}
        </div>
        <div class="col-md-4">

        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        '@AppBundle/Resources/public/app/css/bookmark/index.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block javascript %}
    {{ parent() }}
    {% javascripts
        '@AppBundle/Resources/public/app/js/bookmark/index.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
